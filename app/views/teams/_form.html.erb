<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :league %>
    <%= f.input :full_team_name %>
    <%= f.input :short_team_name %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :twitter_handle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
