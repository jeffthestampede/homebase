<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>League</th>
      <th>Full team name</th>
      <th>Short team name</th>
      <th>City</th>
      <th>State</th>
      <th>Twitter handle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.league %></td>
        <td><%= team.full_team_name %></td>
        <td><%= team.short_team_name %></td>
        <td><%= team.city %></td>
        <td><%= team.state %></td>
        <td><%= team.twitter_handle %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

